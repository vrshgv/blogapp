<% include partials/header %>

<div class="ui main text container segment">
<h2 class="ui header">Edit Post</h2>
<form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
  <div class="field">
    <label>Title</label>
    <input type="text" name="blog[title]" placeholder="Title" value="<%= blog.title %>">
  </div>
  <div class="field">
    <label>Image</label>
    <input type="text" name="blog[image]" placeholder="Image" value="<%= blog.image %>">
  </div>
  <div class="field">
	  <label>Body</label>
   <textarea name="blog[body]" required><%= blog.body %></textarea>
  </div>
  <button class="ui purple basic button" type="submit">Submit</button>
</form>
	
</div>

<% include partials/footer %>